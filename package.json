{
   "name": "api",
   "version": "0.0.1",
   "description": "",
   "author": "",
   "private": true,
   "license": "UNLICENSED",
   "scripts": {
      "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ../api/ormconfig.json",
      "migration:run": "npm run build && npm run typeorm migration:run",
      "migration:generate": "npm run build && npm run typeorm migration:create -- -n",
      "prebuild": "rimraf dist",
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json"
   },
   "dependencies": {
      "@nestjs/common": "^8.2.0",
      "@nestjs/core": "^8.2.0",
      "@nestjs/jwt": "^8.0.0",
      "@nestjs/mapped-types": "*",
      "@nestjs/passport": "^8.0.1",
      "@nestjs/platform-express": "^8.2.0",
      "@nestjs/swagger": "^5.1.4",
      "@nestjs/typeorm": "^8.0.2",
      "bcrypt": "^5.0.1",
      "class-transformer": "^0.4.0",
      "class-validator": "^0.13.1",
      "firebase-admin": "^10.0.0",
      "helmet": "^4.6.0",
      "nest-access-control": "^2.0.2",
      "nestjs-firebase": "^8.2.0",
      "passport": "^0.5.0",
      "passport-jwt": "^4.0.0",
      "pg": "^8.7.1",
      "reflect-metadata": "^0.1.10",
      "rimraf": "^3.0.2",
      "rxjs": "^7.4.0",
      "swagger-ui-express": "^4.1.6",
      "typeorm": "0.2.38"
   },
   "devDependencies": {
      "@nestjs/cli": "^7.5.1",
      "@nestjs/schematics": "^7.1.3",
      "@nestjs/testing": "^7.5.1",
      "@types/bcrypt": "^5.0.0",
      "@types/express": "^4.17.8",
      "@types/jest": "^26.0.15",
      "@types/node": "^8.0.29",
      "@types/passport-jwt": "^3.0.6",
      "@types/supertest": "^2.0.10",
      "@typescript-eslint/eslint-plugin": "^4.6.1",
      "@typescript-eslint/parser": "^4.6.1",
      "eslint": "^7.12.1",
      "eslint-config-prettier": "7.2.0",
      "eslint-plugin-prettier": "^3.1.4",
      "jest": "^26.6.3",
      "prettier": "^2.1.2",
      "supertest": "^6.0.0",
      "ts-jest": "^26.4.3",
      "ts-loader": "^8.0.8",
      "ts-node": "3.3.0",
      "tsconfig-paths": "^3.9.0",
      "typescript": "^4.4.4"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   }
}
